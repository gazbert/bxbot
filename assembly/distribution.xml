<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd
  ">

    <id>dist</id>
    <formats>
        <format>tar.gz</format>
        <!--<format>zip</format>-->
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>README.md</include>
                <include>LICENSE</include>
                <include>3rd-party-licenses.md</include>
                <include>CONTRIBUTING.md</include>
                <include>bxbot.sh</include>
                <include>bxbot.bat</include>
                <include>config/*.xml</include>
                <include>config/*.yaml</include>
                <include>config/application.properties</include>
                <include>config/log4j2.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>bxbot-app/target</directory>
            <outputDirectory>libs</outputDirectory>
            <includes>
                <include>bxbot-app-*.jar</include>
            </includes>

        </fileSet>
        <fileSet>
        <directory>logs</directory>
        <outputDirectory>logs</outputDirectory>
        </fileSet>


        <fileSet>
            <directory>/target</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>bxbot-parent-*.jar</include>
            </includes>

        </fileSet>

    </fileSets>



    <dependencySets>
        <dependencySet>
            <outputDirectory>logs</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>